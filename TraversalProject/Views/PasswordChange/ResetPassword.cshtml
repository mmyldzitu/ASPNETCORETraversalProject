@model ResetPasswordViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br /><br />
    <h2>Şifre Yenileme Sayfası</h2>
    <form method="post">
        <label>Yeni Şifrenizi Giriniz</label>
        <input type="password" class="form-control" asp-for="Password" />
        <br />

        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="password" class="form-control" asp-for="confirmPassword" />
        <br />

        <button class="btn btn-outline-success">Şifreyi Değiştir</button>
    </form>
</div>

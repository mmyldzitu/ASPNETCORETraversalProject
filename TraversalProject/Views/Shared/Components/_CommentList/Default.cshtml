@using EntityLayer.Concrete
@model List<Comment>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (@ViewBag.commentCount)</h4>
    @foreach(var item in Model) { 
    <div class="media mt-4">
        <div class="img-circle">
            <img src="@item.AppUser.ImageURL" class="img-fluid" alt="...">
        </div>
        <div class="media-body">

            <ul class="time-rply mb-2">
                <li>
                    <a href="#URL" class="name mt-0 mb-2 d-block">@item.AppUser.Name @item.AppUser.Surname</a>
                    @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))

                </li>
                @*<li class="reply-last">
                    <a href="#reply" class="reply">
                        Yanıtla
                    </a>
                </li>*@
            </ul>
            <p>
               @item.CommentContent
            </p>
        </div>
    </div>}

    
</div>
@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "UpdateGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Güncellenecek Rehber</h1>
<form method="post">
    <input type="hidden" asp-for="GuideId" />
    <label>İsim</label>
    <input class="form-control" type="text" asp-for="Name" />
    <br />

    <label>Açıklama</label>
    <input class="form-control" type="text" asp-for="Description" />
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>


@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>MediatR Rehberler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.GuideID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a href="/Admin/GuideMediatR/DeleteGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Admin/GuideMediatR/UpdateGuide/@item.GuideID" class="btn btn-outline-primary">Güncelle</a></td>
                    
                </tr>
            }
</table>
<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-info">Yeni Rehber</a>


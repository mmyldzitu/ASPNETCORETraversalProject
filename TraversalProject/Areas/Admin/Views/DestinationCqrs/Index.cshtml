@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;

}

<h1>CQRS Tur Verileri</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün-Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCqrs/RemoveDestination/@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCqrs/UpdateDestination/@item.DestinationID" class="btn btn-outline-secondary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/DestinationCqrs/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası</a>

